// Copied from 'digital_out' application, configures the 3 LEDs (TODO - get high drive)
/ {
    // LED GPIO OUTPUT PINS SETUP
    aliases {
        led0 = &led0_node;
        led1 = &led1_node;
        led2 = &led2_node;
    };

    leds {
        compatible = "gpio-leds";

        // TODO - switch these to pins that support high drive

        led0_node: led0 {
            gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>; //Green
        };

        led1_node: led1 {
            gpios = <&gpio1 00 GPIO_ACTIVE_HIGH>; //Red
        };

        led2_node: led2 {
            gpios = <&gpio0 15 GPIO_ACTIVE_HIGH>; //Infrared
        };
    };


    // NEEDED FOR INPUT PIN CONFIGURATION WITH ADC
    /* NOTE: this node name must be zephyr,user (comma!) */
    zephyr,user {
        io-channels = <&adc 0>;
    };
};

&adc {
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    channel@0 {
        reg = <0>;
        zephyr,gain = "ADC_GAIN_1_5";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>;
        zephyr,input-positive = <NRF_SAADC_AIN0>; /* P0.02 */
        
        //For differential measurement, use input-negative.
        //Note: this will change the adc range to 0-2000 for 0v - 3V
        //zephyr,input-negative = <NRF_SAADC_GND>;
    };
};